<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="EmployeeTasks" class="btn btn-info form-control text-white">
            Add New Employee Task
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DTLoad" class="table table-striped table-bordered" style="widows:100%">
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Start Time</th>
                    <th>Deadline</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/EmployeeTaskList.js"></script>
}

